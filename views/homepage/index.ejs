<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Help A Mission</title>
    <link rel="stylesheet" href="styles/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/scripts/topbar.js"></script>
    <script src="/scripts/script.js"></script>
    <script>
        // top loader config
        topbar.config({
            autoRun: true,
            barThickness: 3,
            barColors: {
                0: "rgba(26,  188, 156, .9)",
                ".25": "rgba(52,  152, 219, .9)",
                ".50": "rgba(241, 196, 15,  .9)",
                ".75": "rgba(230, 126, 34,  .9)",
                "1.0": "rgba(211, 84,  0,   .9)",
            },
            shadowBlur: 10,
            shadowColor: "rgba(0,   0,   0,   .6)",
        });

        console.log('loader in progress');



        // function for displaying top loader
        const showTopLoader = () => {
            console.log('displaying top loader');
            topbar.show();
        }

        const hideTopLoader = () => {
            console.log('hiding top loader');
            topbar.hide();
        }
    </script>
    <style>
        html {
            scroll-behavior: smooth;
        }
    </style>
</head>

<body class="overflow-x-hidden">

    <!-- page loading -->

    <%-include('header.ejs')-%>
        <%-include('hero.ejs')-%>
            <%-include('content.ejs')-%>
                <%-include('carousels.ejs')-%>
                    <%-include('chairs.ejs')-%>
                        <%-include('donation.ejs')-%>
                            <%-include('events.ejs')-%>
                                <%-include('about.ejs')-%>
                                    <%-include('footer.ejs')-%>
</body>

</html>