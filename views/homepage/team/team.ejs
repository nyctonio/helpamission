<!-- component -->
<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
    <div class="text-center pb-12">
        <h2 class="text-base font-bold text-indigo-600">
            We are the best team and our work save lives.
        </h2>
        <h1 class="font-bold text-3xl md:text-4xl lg:text-5xl font-heading text-gray-900">
            Check our awesome team members
        </h1>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <% for(let i of membersdata) {%>
            <div class="w-full bg-white rounded-lg sahdow-lg overflow-hidden flex flex-col md:flex-row">
                <div class="w-full md:w-2/5 h-80">
                    <img class="object-center object-cover w-full h-full" src="<%-i.image%>" alt="photo">
                </div>
                <div class="w-full md:w-3/5 text-left p-6 md:p-4 space-y-2">
                    <p class="text-xl text-gray-700 font-bold">
                        Name: <%-i.name%>
                    </p>
                    <p class="text-base text-gray-700 font-normal">
                        Desg: <%-i.designation%>
                    </p>
                    <p class="text-base leading-relaxed text-gray-700 font-normal">
                        Contact: <%-i.contact%>
                    </p>
                </div>
            </div>

            <%}%>

    </div>
</section>