        <script>
            function searchHandler() {
                const searchvalue = document.getElementById(`search-bar`).value;
                console.log('s', searchvalue);
                const searchclass = document.getElementsByClassName(`search-class`);
                console.log('s', searchclass);
                for (let i = 0; i < searchclass.length; i++) {
                    if (searchclass[i].innerText.toLowerCase().indexOf(searchvalue.toLowerCase()) > -1) {
                        searchclass[i].style.display = "";
                    } else {
                        searchclass[i].style.display = "none";
                    }
                }
            }
        </script>


